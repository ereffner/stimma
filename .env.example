# Stimma Environment Configuration

GIT_PAT=your_github_personal_access_token

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=stimma
DB_USERNAME=stimma_user
DB_PASSWORD=your_secure_database_password

# Mail Configuration
MAIL_HOST=your_mail_server
MAIL_PORT=25
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Stimma"
MAIL_SMTP_AUTH=true
MAIL_SMTP_DEBUG=0
# Allowed domains configured in allowed_domains.txt

# AI configuration (optional - configure with your API key)
AI_PROVIDER=openai
AI_SERVER=
AI_API_KEY=your_openai_api_key
AI_MODEL=gpt-4o-mini
AI_MAX_COMPLETION_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_STREAM=false
AI_MAX_MESSAGE_LENGTH=1000
AI_RATE_LIMIT_REQUESTS=50
AI_RATE_LIMIT_MINUTES=5

# System parameters
SYSTEM_NAME="Stimma"
SYSTEM_DESCRIPTION="Lär dig i små steg"
SYSTEM_LOGO="/images/logo.png"
SYSTEM_COLOR="#007bff"
SYSTEM_FONT="Arial, sans-serif"
SYSTEM_FONT_SIZE=16
SYSTEM_URL=https://your-domain.example.com
SYSTEM_VERSION=1.0

# Auth parameters
AUTH_TOKEN_EXPIRY_MINUTES=15
SESSION_REGENERATE_MINUTES=30
SESSION_LIFETIME=0
SESSION_LIFETIME_HOURS=24
REMEMBER_TOKEN_HOURS=720
